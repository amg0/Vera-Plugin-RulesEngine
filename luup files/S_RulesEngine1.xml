<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<serviceStateTable>
		<stateVariable>
			<name>Status</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>ui1</dataType>
			<defaultValue>0</defaultValue>
			<shortCode>status</shortCode>
		</stateVariable>
		<stateVariable>
			<name>RulesEnginePanel</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>string</dataType>
			<defaultValue></defaultValue>
			<shortCode>rulesenginepanel</shortCode>
		</stateVariable>
		<!-- Arguments -->
		<stateVariable>
			<name>A_ARG_TYPE_FileName</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
		<stateVariable>
			<name>A_ARG_TYPE_RuleName</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
		<stateVariable>
			<name>A_ARG_TYPE_RuleContent</name>
			<sendEventsAttribute>no</sendEventsAttribute>
			<dataType>string</dataType>
		</stateVariable>
	</serviceStateTable>
	<actionList>
		<action>
			<name>LoadRules</name>
			<argumentList>
				<argument>
					<name>fileName</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_FileName</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetRule</name>
			<argumentList>
				<argument>
					<name>ruleName</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_RuleName</relatedStateVariable>
				</argument>
				<argument>
					<name>newContent</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_RuleContent</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
	</actionList>
</scpd>
